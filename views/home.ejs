<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Shoe Store</title>
    <link rel="stylesheet" href="/css/styles.css">
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const track = document.querySelector('.carousel-track');
            const leftBtn = document.querySelector('.left-btn');
            const rightBtn = document.querySelector('.right-btn');
            const productCard = document.querySelector('.product-card');
            
            let scrollAmount = productCard.offsetWidth + 20; // 20 = gap
            
            // Manual Scroll with buttons
            leftBtn.addEventListener('click', () => {
                track.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
            });
    
            rightBtn.addEventListener('click', () => {
                track.scrollBy({ left: scrollAmount, behavior: 'smooth' });
            });
    
            // Update scrollAmount if window is resized
            window.addEventListener('resize', () => {
                scrollAmount = productCard.offsetWidth + 20;
            });
        });
    </script>
    
</head>
<body>

    <header>
        <nav>
            <div class="logo">FootFlex</div>
            <div class="nav-links">
                <a href="/">Home</a>
                <a href="/shop">Shop</a>
                <a href="/about">About</a>
                <a href="/contact">Contact</a>
            </div>
        </nav>
    </header>

    <section class="hero">
        <div class="hero-text">
            <h1>Step Into Style</h1>
            <p>Explore the latest collection of premium shoes</p>
            <a href="/shop" class="cta-button">Shop Now</a>
        </div>
    </section>

    <section class="products-section">
        <h2>Featured Shoes</h2>
        <div class="carousel-wrapper">
            <!-- Correct button class names -->
            <button class="carousel-btn left-btn">&#8249;</button>
        
            <div class="carousel-track-wrapper">
                <div class="carousel-track">
                    <div class="product-card">
